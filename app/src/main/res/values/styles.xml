<resources>

    <style name="ShapeAppearance.Douya.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.Douya.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:stateListAnimator">@null</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="rippleColor">?colorControlHighlight</item>
        <item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>

    <style name="Widget.Douya.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipIconTint">@color/action_chip_icon_tint</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">9dp</item>
        <item name="chipEndPadding">9dp</item>
        <item name="chipStrokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="chipStrokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="rippleColor">?colorControlHighlight</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
    </style>
</resources>
